---
import { videotestimonios } from '@data'
---

<section class="py-16 bg-background-muted">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <h2 class="text-3xl font-bold text-text mb-4 text-center">
        Video Testimonios
      </h2>
      <p class="text-center text-text-muted mb-12 max-w-2xl mx-auto">
        Escucha directamente de mis pacientes sobre su experiencia y resultados
      </p>
      <div class="grid md:grid-cols-3 gap-6">
        {
          videotestimonios.map((video) => (
            <div class="overflow-hidden hover:shadow-lg transition-shadow cursor-pointer group bg-card rounded-lg">
              <div class="relative h-48">
                <img
                  src={video.thumbnail || '/placeholder.svg'}
                  alt={video.titulo}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
                <div class="absolute inset-0 bg-black/40 flex items-center justify-center">
                  <div class="w-16 h-16 bg-white rounded-full flex items-center justify-center group-hover:scale-110 transition-transform">
                    <div class="w-0 h-0 border-l-20 border-l-primary border-t-12 border-t-transparent border-b-12 border-b-transparent ml-1" />
                  </div>
                </div>
                <div class="absolute bottom-2 right-2 bg-black/70 text-white px-2 py-1 rounded text-xs">
                  {video.duracion}
                </div>
              </div>
              <div class="p-4">
                <h3 class="font-semibold text-text mb-1">{video.titulo}</h3>
                <p class="text-sm text-text-muted">{video.descripcion}</p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
